# vim mode
bindkey -v

# nvm use 12
alias python=python3
export ANDROID_HOME=/Users/gk/Library/Android/sdk
export PATH=$PATH:~/.cargo/bin:~/go/bin

# switch colorscheme
# between 7h and 18h keep the light theme
local current_hour=$(date +%H)
if [[ $current_hour -ge 7 && $current_hour -lt 18 ]]; then
	base16_github
	cp ~/.vim/.vimrc_background ~/
else
	base16_material-palenight
fi